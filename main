local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/polar"))()
local ok = library:CreateWindow("Simon Day")
ok:Section("made by snarlings")
ok:Button("100k Cash",function()
local args = {
    [1] = 100000
}

game:GetService("Players").LocalPlayer.PlayerGui.BM.Money.mega:FireServer(unpack(args))

end)
ok:Button("Timestop",function()
local args = {
    [1] = 3.4,
    [2] = "jotaroP4"
}

game:GetService("ReplicatedStorage").Timestop:FireServer(unpack(args))

end)
